version: '3.0'

services:

  registry:
    container_name: {{registry_container_name}}
    restart: always
    image: registry:{{registry_tag}}
    environment:
      REGISTRY_HTTP_TLS_CERTIFICATE: /certs/lis.crt
      REGISTRY_HTTP_TLS_KEY: /certs/lis.key
      REGISTRY_STORAGE_DELETE_ENABLED: "true"
      REGISTRY_HTTP_ADDR: 0.0.0.0:443
    ports:
      - {{registry_port}}:443
    volumes:
      - {{registry_volume}}:/var/lib/registry
      - {{cert_dir}}:/certs
